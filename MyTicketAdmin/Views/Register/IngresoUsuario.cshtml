@model MyTicketAdmin.Models.DatosObj.MUsuario
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>IngresoUsuario</title>
    <link href="~/Contenido/bootstrap-grid.css" rel="stylesheet" />
    <link href="~/Contenido/bootstrap-reboot.css" rel="stylesheet" />
    <link href="~/Contenido/bootstrap-reboot.min.css" rel="stylesheet" />
    <link href="~/Contenido/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Contenido/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/Contenido/bootstrap.bundle.js"></script>
    <script src="~/Contenido/bootstrap.bundle.min.js"></script>
    <link href="~/Contenido/bootstrap.css" rel="stylesheet" />
    <script src="~/Contenido/bootstrap.js"></script>
    <link href="~/Contenido/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Contenido/bootstrap.min.js"></script>
</head>
<body class="container col-lg-12 col-md-12 col-sm-12 col-lg-offset-2 badge-light">
    <style>
        input {
            border: groove;
            border-radius: 10px 10px;
        }

        #cuerpoFormExt {
            border: groove 5px;
            border-radius: 10px 10px;
        }

        #cuerpoFormInt {
            border: ridge 3px;
            border-radius: 8px 8px;
        }

        #btnReg {
            border: 4px;
            transform-style: preserve-3d;
        }

        h3 {
            color: aliceblue;
            text-align: center;
        }
    </style>
    @RenderPage("~/Views/Register/_Header.cshtml")
    <div>
        <div id="cuerpoFormExt" class="col-lg-8 col-md-8 col-sm-8 input-group-mb-3 text-center offset-2">
            @using (Html.BeginForm("guardarUsuario", "Register", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div id="cuerpoFormInt" class="col-6 table-hover table table-striped table-bordered modal-body offset-3">
                    <h3 class="modal-header bg-primary "><strong> Ingreso usuario</strong> </h3>
                    @Html.ValidationMessageFor(model => model.codArea, "", new { @class = "text-danger" })
                    @Html.LabelFor(model => model.codArea, "Codigo Area", new { @class = "form-control btn-info" })
                    @Html.TextBoxFor(model => model.codArea, new { @class = "form-control input-group" })

                    @Html.ValidationMessageFor(model => model.codEstado, "", new { @class = "text-danger" })
                    @Html.LabelFor(model => model.codEstado, "Codigo Estado", new { @class = "form-control btn-info" })
                    @Html.TextBoxFor(model => model.codEstado, new { @class = "form-control input-group" })

                    @Html.ValidationMessageFor(model => model.codPersona, "", new { @class = "text-danger" })
                    @Html.LabelFor(model => model.codPersona, "Codigo Persona", new { @class = "form-control btn-info" })
                    @Html.TextBoxFor(model => model.codPersona, new { @class = "form-control input-group" })

                    @Html.ValidationMessageFor(model => model.nick, "", new { @class = "text-danger" })
                    @Html.LabelFor(model => model.nick, "NickName", new { @class = "form-control btn-info" })
                    @Html.TextBoxFor(model => model.nick, new { @class = "form-control input-group" })

                    @Html.ValidationMessageFor(model => model.pass, "", new { @class = "text-danger" })
                    @Html.LabelFor(model => model.pass, "Password", new { @class = "form-control btn-info" })
                    @Html.EditorFor(model => model.pass, "password", new { @class = "form-control input-group" })
                    <br />
                    <input type="submit" value="Enviar" class="btn btn-info shadow" />
                </div>
            }
            <div class="btn btn-info shadow">
                @Html.Partial("~//Views//Shared//_Areas.cshtml")
            </div>
            <div>
                @Html.ActionLink("Regresar", "Principal", "Principal")
            </div>
        </div>
    </div>
</body>
</html>
