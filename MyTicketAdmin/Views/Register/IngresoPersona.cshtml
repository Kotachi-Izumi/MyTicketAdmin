@model MyTicketAdmin.Models.DatosObj.MPersona
<link href="~/Contenido/bootstrap-grid.css" rel="stylesheet" />
<link href="~/Contenido/bootstrap-reboot.css" rel="stylesheet" />
<link href="~/Contenido/bootstrap-reboot.min.css" rel="stylesheet" />
<link href="~/Contenido/bootstrap-theme.css" rel="stylesheet" />
<link href="~/Contenido/bootstrap-theme.min.css" rel="stylesheet" />
<script src="~/Contenido/bootstrap.bundle.js"></script>
<script src="~/Contenido/bootstrap.bundle.min.js"></script>
<link href="~/Contenido/bootstrap.css" rel="stylesheet" />
<script src="~/Contenido/bootstrap.js"></script>
<link href="~/Contenido/bootstrap.min.css" rel="stylesheet" />
<script src="~/Contenido/bootstrap.min.js"></script>
@RenderPage("~/Views/Register/_Header.cshtml")
<style>
    input {
        border: groove;
        border-radius: 10px 10px;
    }
    #cuerpoFormExt {
        border: groove 5px;
        border-radius: 10px 10px;
    }
    #cuerpoFormInt {
        border: ridge 3px;
        border-radius: 8px 8px;
        text-align: center;
        align-content: center;
    }
    #btnReg {
        border: 4px;
        transform-style: preserve-3d;
    }
    h3{
            color:aliceblue;
            text-align:center;
        }
</style>

<div class="container col-lg-12 col-md-12 col-sm-12 col-lg-offset-2 badge-light ">
    <div id="cuerpoFormExt" class="col-lg-8 col-md-8 col-sm-8 input-group-mb-3 offset-2">
        @using (Html.BeginForm("guardarPersona", "Register", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div id="cuerpoFormInt" class="col-6 table-hover table table-striped table-bordered modal-body offset-3">
                <h3 class="modal-header bg-primary ">Ingreso Persona</h3>
                @Html.LabelFor(Model => Model.nombre, "Nombre", new { @class = "form-control btn-info" })
                @Html.TextBoxFor(Model => Model.nombre, new { @class = "form-control input-group" })
                @Html.ValidationMessageFor(model => model.nombre)

                @Html.LabelFor(model => model.AppPaterno, "Primer Apellido", new { @class = "form-control btn-info" })
                @Html.TextBoxFor(model => model.AppPaterno, new { @class = "form-control input-group" })
                @Html.ValidationMessageFor(model => model.AppPaterno)

                @Html.LabelFor(model => model.AppMaterno, "Segundo Apellido", new { @class = "form-control btn-info" })
                @Html.TextBoxFor(model => model.AppMaterno, new { @class = "form-control input-group" })

                @Html.LabelFor(model => model.Rut, "Rut", new { @class = "form-control btn-info" })
                @Html.TextBoxFor(model => model.Rut, new { @class = "form-control input-group" })
                @Html.ValidationMessageFor(model => model.Rut)

                @Html.LabelFor(model => model.DV, "Digito Verificador", new { @class = "form-control btn-info" })
                @Html.TextBoxFor(model => model.DV, new { @class = "form-control input-group" })
                @Html.ValidationMessageFor(model => model.DV)

                @Html.LabelFor(model => model.Fnac, "Fecha Nacimiento", new { @class = "form-control btn-info" })
                @Html.EditorFor(model => model.Fnac, "date", new { @class = "form-control input-group" })
                @Html.ValidationMessageFor(model => model.Fnac)

                @Html.LabelFor(model => model.Fono, "Telefono Fijo", new { @class = "form-control btn-info" })
                @Html.EditorFor(model => model.Fono, "tel", new { @class = "form-control input-group" })
                @Html.ValidationMessageFor(model => model.Fono)

                @Html.LabelFor(model => model.Celular, "Celular", new { @class = "form-control btn-info" })
                @Html.EditorFor(model => model.Celular, "tel", new { @class = "form-control input-group" })
                @Html.ValidationMessageFor(model => model.Celular)

                @Html.LabelFor(model => model.Mail, "Email", new { @class = "form-control btn-info" })
                @Html.EditorFor(model => model.Mail, "email", new { @class = "form-control input-group" })
                @Html.ValidationMessageFor(model => model.Mail)

                <br />
                <input type="submit" value="Enviar" class="btn btn-info shadow" />
            </div>
        }
        <div>
            @Html.ActionLink("Regresar", "Principal", "Principal")
        </div>
    </div>
 </div>
