@model MyTicketAdmin.Models.DatosObj.MDireccion
@{ 
    var comunas = MyTicketAdmin.Controllers.ConPG.comunas();
    var regiones = MyTicketAdmin.Controllers.ConPG.regiones();
}   
<link href="~/Contenido/bootstrap-grid.css" rel="stylesheet" />
<link href="~/Contenido/bootstrap-reboot.css" rel="stylesheet" />
<link href="~/Contenido/bootstrap-reboot.min.css" rel="stylesheet" />
<link href="~/Contenido/bootstrap-theme.css" rel="stylesheet" />
<link href="~/Contenido/bootstrap-theme.min.css" rel="stylesheet" />
<script src="~/Contenido/bootstrap.bundle.js"></script>
<script src="~/Contenido/bootstrap.bundle.min.js"></script>
<link href="~/Contenido/bootstrap.css" rel="stylesheet" />
<script src="~/Contenido/bootstrap.js"></script>
<link href="~/Contenido/bootstrap.min.css" rel="stylesheet" />
<script src="~/Contenido/bootstrap.min.js"></script>



<style>
    input {
        border: groove;
        border-radius: 10px 10px;
    }

    #cuerpoFormExt {
        border: groove 5px;
        border-radius: 10px 10px;
    }

    #cuerpoFormInt {
        border: ridge 3px;
        border-radius: 8px 8px;
        text-align:center;
        align-content:center;
    }

    #btnReg {
        border: 4px;
        transform-style: preserve-3d;
    }
    #regiones{
        width:270px;
    }
</style>
@RenderPage("~/Views/Register/_Header.cshtml")

<div>
    <div class="container col-lg-12 col-md-12 col-sm-12 col-lg-offset-2 badge-light ">
        <div id="cuerpoFormExt" class="col-lg-6 col-md-6 col-sm-6 input-group-mb-3 offset-3">
            @using (Html.BeginForm("guardarDireccion", "Register", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div id="cuerpoFormInt" class="col-6 table-hover table table-striped table-bordered modal-body offset-3 ">
                    @Html.LabelFor(Model => Model.DescCasa, "Direccion", new { @class = "form-control btn-info" })
                    @Html.TextBoxFor(Model => Model.DescCasa, new { @class = "form-control input-group" })
                    @Html.ValidationMessageFor(model => model.DescCasa)

                    @Html.LabelFor(Model => Model.NumCasa, "No casa", new { @class = "form-control btn-info" })
                    @Html.TextBoxFor(Model => Model.NumCasa, new { @class = "form-control input-group" })
                    @Html.ValidationMessageFor(model => model.NumCasa)
                    <label for="regiones" class="form-control btn-info">Seleccione region</label>
                    <select id="regiones" name="regiones" class="">
                        @foreach (var reg in regiones)
                {
                            <option value="@reg">@reg</option>
                        }
                    </select>
                    <label for="comunas" class="form-control btn-info">Seleccione comuna</label>
                    <select id="comunas" name="comunas">
                        @foreach (var com in comunas)
                {
                            <option value="@com">@com</option>
                        }
                    </select>
                    <input type="submit" value="Enviar" class="btn btn-info shadow" />
                </div>
            }
            <div>
                @Html.ActionLink("Regresar", "Principal", "Principal")
            </div>
        </div>

    </div>
</div>
    
