@model MyTicketAdmin.Models.DatosObj.MTicket
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>nuevoTicket</title>
    <link href="~/Contenido/bootstrap-grid.css" rel="stylesheet" />
    <link href="~/Contenido/bootstrap-reboot.css" rel="stylesheet" />
    <link href="~/Contenido/bootstrap-reboot.min.css" rel="stylesheet" />
    <link href="~/Contenido/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Contenido/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/Contenido/bootstrap.bundle.js"></script>
    <script src="~/Contenido/bootstrap.bundle.min.js"></script>
    <link href="~/Contenido/bootstrap.css" rel="stylesheet" />
    <script src="~/Contenido/bootstrap.js"></script>
    <link href="~/Contenido/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Contenido/bootstrap.min.js"></script>
</head>
<body class="container col-lg-12 col-md-12 col-sm-12 col-lg-offset-2 badge-light">
    @RenderPage("~/Views/Register/_Header.cshtml")
    <div id="cuerpoFormExt" class="col-lg-8 col-md-8 col-sm-8 input-group-mb-3 text-center offset-2"> 
        @using (Html.BeginForm("guardarTicket","Tickets",FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div id="cuerpoFormInt" class="col-6 table-hover table table-striped table-bordered modal-body offset-3">
                <h3 class="modal-header bg-primary "><strong> Ingreso usuario</strong> </h3>
                @Html.LabelFor(model => model.codEstadoTicket, "Estado Ticket", new { @class = "form-control btn-info" })
                @Html.EditorFor(model => model.codEstadoTicket, new { @class = "form-control input-group" })
                @Html.ValidationMessageFor(model => model.codEstadoTicket,"", new { @class="text-danger"})

                @Html.LabelFor(model => model.codGravedad, "Codigo Gravedad", new { @class = "form-control btn-info" })
                @Html.EditorFor(model => model.codGravedad, new { @class = "form-control input-group" })
                @Html.ValidationMessageFor(model => model.codGravedad, "", new { @class = "text-danger" })

                @Html.LabelFor(model => model.codPersona, "Codigo Persona", new { @class = "form-control btn-info" })
                @Html.EditorFor(model => model.codPersona, new { @class = "form-control input-group" })
                @Html.ValidationMessageFor(model => model.codPersona, "", new { @class = "text-danger" })

                @*@Html.LabelFor(model => model.codTicket, "Codigo Ticket", new { @class = "form-control btn-info" })
                @Html.EditorFor(model => model.codTicket, new { @class = "form-control input-group" })*@

                @Html.LabelFor(model => model.codTipoAtencion, "Tipo Atencion", new { @class = "form-control btn-info" })
                @Html.EditorFor(model => model.codTipoAtencion, new { @class = "form-control input-group" })
                @Html.ValidationMessageFor(model => model.codTipoAtencion, "", new { @class = "text-danger" })

                @Html.LabelFor(model => model.descAsunto, "Asunto", new { @class = "form-control btn-info" })
                @Html.EditorFor(model => model.descAsunto, new { @class = "form-control input-group" })
                @Html.ValidationMessageFor(model => model.descAsunto, "", new { @class = "text-danger" })

                @Html.LabelFor(model => model.detalleTicket, "Descripcion Problema", new { @class = "form-control btn-info" })
                @Html.TextAreaFor(model => model.detalleTicket, new { @class = "form-control input-group" })
                @Html.ValidationMessageFor(model => model.detalleTicket, "", new { @class = "text-danger" })

                @Html.LabelFor(model => model.esMasivo,"Es masivo", new { @class = "form-control btn-info" })
                @Html.EditorFor(model => model.esMasivo, "checkbox", new { @class = "form-control input-group" })
                <br />
                <input type="submit" value="Guardar" id="grdTicket" name="grdTicket" class="btn btn-info shadow"/>
                </div>
                }
        <div>
            @Html.ActionLink("Regresar", "Principal", "Principal")
        </div>
            </div>
</body>
</html>
